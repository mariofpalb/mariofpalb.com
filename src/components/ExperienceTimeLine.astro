---
type Experience = {
  startingDate: Date;
  endingDate: Date;
  title: string;
  company: string;
  companyUrl: string;
  companyLogo: string;
  experienceDescription: string;
};

const experiences: Array<Experience> = [
  {
    startingDate: new Date("2021-01-01"),
    endingDate: new Date("2021-01-01"),
    title: "Application UI code in Tailwind CSS",
    company: "Tailwind UI",
    companyUrl: "https://tailwindui.com",
    companyLogo: "https://tailwindui.com/img/tailwindui-logo.svg",
    experienceDescription:
      "Get access to over 20+ pages including a dashboard layout, charts, kanban board, calendar, and pre-order E-commerce & Marketing pages.",
  },
];
---

<ol class="relative border-s border-gray-200 dark:border-gray-700">
  {
    experiences.map((experience, index) => {
      const {
        startingDate,
        endingDate,
        title,
        company,
        companyUrl,
        companyLogo,
        experienceDescription,
      } = experience;

      const isLastItem = index === experiences.length - 1;
      const itemMarginBottom = isLastItem ? "" : "mb-10";

      return (
        <li class={`ms-4${isLastItem ? "" : " mb10"}`}>
          <div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700" />
          <time class="mb-1 text-sm font-normal leading-none text-gray-400 dark:text-gray-500">
            {startingDate.toLocaleDateString()} -{" "}
            {endingDate.toLocaleDateString()}
          </time>
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
            {title}
          </h3>
          <p class="mb-4 text-base font-normal text-gray-500 dark:text-gray-400">
            {experienceDescription}
          </p>
        </li>
      );
    })
  }
</ol>
